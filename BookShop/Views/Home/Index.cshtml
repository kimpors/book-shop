@model PageViewModel

<article class="home">
  @foreach (Book book in @Model.Books)
  {
    <section>
      <h2>@book.Name</h2>
      <p>
        @book.Type
        <br>
        <i>Price: @book.Price.ToString(".##")</i>
      </p>
      <a asp-action="detail" asp-route-id="@book.Id">Detail</a>
      <br>
      <a asp-controller="order" asp-action="index">To basket</a>
      <a asp-controller="order" asp-action="Add" asp-route-id="@book.Id">Add To Basket</a>
    </section>
  }
</article>

@await Component.InvokeAsync(nameof(Paging), new { @Model.Info })
